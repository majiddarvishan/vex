namespace vex {
static constexpr auto VEX_ASCII_LOGO = R"(
    __     __
   /  \   /  \
   \   \ /   /
    \__//__/
     VEX
)";

inline constexpr int version_major = @VEX_VERSION_MAJOR@;
inline constexpr int version_minor = @VEX_VERSION_MINOR@;
inline constexpr int version_patch = @VEX_VERSION_PATCH@;
inline constexpr const char* version_tag = "@VEX_VERSION_TAG@";

inline constexpr std::string_view version() {
    if constexpr (version_tag[0] == '\0') {
        return "@VEX_VERSION_MAJOR@.@VEX_VERSION_MINOR@.@VEX_VERSION_PATCH@";
    } else {
        return "@VEX_VERSION_MAJOR@.@VEX_VERSION_MINOR@.@VEX_VERSION_PATCH@-@VEX_VERSION_TAG@";
    }
}

inline constexpr std::string_view version_full() {
    return "Vex v@VEX_VERSION_MAJOR@.@VEX_VERSION_MINOR@.@VEX_VERSION_PATCH@ â€” Fast. Simple. Professional.";
}
